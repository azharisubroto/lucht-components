{
  "build": {
    "componentPath": "direflow-components",
    "emitSourceMap": false,
    "emitIndexHTML": false,
    "emitAll": false,
    "split": true,
    "vendor": true
  },
  "modules": {
    "react": "https://unpkg.com/react@16.14.0/umd/react.production.min.js",
    "reactDOM": "https://unpkg.com/react-dom@16.14.0/umd/react-dom.production.min.js"
  },
  "plugins": [
    {
      "name": "styled-components"
    }
  ],
  "polyfills": {
    "sd": "https://cdn.jsdelivr.net/npm/@webcomponents/webcomponentsjs@2.5.0/bundles/webcomponents-sd.js",
    "ce": "https://cdn.jsdelivr.net/npm/@webcomponents/webcomponentsjs@2.5.0/bundles/webcomponents-ce.js",
    "adapter": "https://cdn.jsdelivr.net/npm/@webcomponents/webcomponentsjs@2.5.0/custom-elements-es5-adapter.js"
  }
}
